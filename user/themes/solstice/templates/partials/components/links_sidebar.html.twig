<!-- Links Sidebar -->
{% for sidebar in page.header.sidebars.links %}
	{% set front =  page.find('/components/links/' ~ sidebar).header %}
	<section>
		<header class="major">
			<h2>{{ front.title|raw }}</h2>
		</header>
		<ul class="default {{ front.class }}">
			{% for link in front.links %}
				<li>
					<a href="{{ link.target }}">{{ link.text|raw }}</a><br/>
					{{ link.description|raw }}
				</li>
			{% endfor %}
		</ul>
	</section>
{% endfor %}
